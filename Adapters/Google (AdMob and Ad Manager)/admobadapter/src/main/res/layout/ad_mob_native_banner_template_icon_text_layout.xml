<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/native_ad_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ad_mob_outline_shape">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/ad_mob_medium_margin"
        android:layout_marginTop="@dimen/ad_mob_default_margin"
        android:layout_marginEnd="@dimen/ad_mob_large_margin"
        android:layout_marginBottom="@dimen/ad_mob_default_margin"
        android:orientation="horizontal"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/ad_app_icon"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/ad_mob_medium_margin"
            android:adjustViewBounds="true"
            tools:visibility="visible" />

        <LinearLayout
            android:layout_width ="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/ad_mob_no_margin"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ad_headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#003B3F41"
                android:ellipsize="end"
                android:fontFamily="@font/inter"
                android:maxLines="1"
                android:textColor="#202020"
                android:textFontWeight="700"
                android:textSize="@dimen/ad_mob_text_size_medium"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/ad_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/inter"
                android:maxLines="1"
                android:textColor="#202020"
                android:textFontWeight="400"
                android:textSize="@dimen/ad_mob_test_size_small"
                android:textStyle="normal"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.gms.ads.nativead.NativeAdView>
